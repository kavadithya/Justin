<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class='row-fluid'>
  <div class='span3'></div>
  <div class="row">
    <div class="span6">
      <div class='forms'>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.label 'First name', 'First Name' %>
          <%= f.text_field :name %>

          <%= f.label 'Last name', 'Last Name' %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.text_field :email %>
    
          <%= f.label 'Immigration Status', 'Immigration Status' %>
          <%= f.select :immigration_status, ['status 1', 'status 2', 'status 3'] %>
          
          <%= f.label 'City' %>
          <%= f.text_field :city %>

          <%= f.label 'Country' %>
          <%= f.select :country, ['Country 1','Country 2','Country 3'] %>
          
          <%= f.label 'User name' %>
          <%= f.text_field :user_name %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation %>
         <!-- 
          <div class='check'>
          <%= check_box_tag 'accept_terms' %> <label>I agree to the terms and conditions</label></div>-->

          <%= recaptcha_tags :public_key => '6LfuIN0SAAAAAM6V5X5jZk6oTTnuWxQ_7lr4XVHQ' %> 
          
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
  <div class='span3'></div>
</div>